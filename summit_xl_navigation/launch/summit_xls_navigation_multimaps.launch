<?xml version="1.0"?>
<launch>
	  <arg name="prefix" value="summit_xl_"/>
	  <!-- Map server -->
	  <arg name="map_file" default="$(find summit_xl_localization)/maps/map_in_use/map.yaml"/>
	  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
		<param name="frame_id" value="$(arg prefix)map"/>
	  </node>

	  <!-- Multimap server -->
	  <arg name="multimap_file" default="$(find summit_xl_localization)/maps/multimaps_in_use/multimap_environment.yaml"/>
          
	  <node name="multimap_server" pkg="multimap_server" type="multimap_server" args="$(arg multimap_file)"> 
<!--                <param name="frame_id" value="$(arg prefix)map"/> -->
	  </node>  

	  <!-- AMCL -->
	  <include file="$(find summit_xl_localization)/launch/amcl.launch">
		<arg name="scan_topic" value="scan" />
	   </include>

	  <!-- move_base -->

	  <include file="$(find summit_xl_navigation)/launch/move_base.launch">
		<arg name="scan_topic" value="scan" />
	   </include>


